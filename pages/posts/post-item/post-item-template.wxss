.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding-bottom: 5px;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}

.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date {
    margin-left: 20rpx;
    margin-bottom: 5px;
    font-size: 26rpx;
    vertical-align: middle;
}
.post-title {
    margin-left: 10px;
    margin-bottom: 10px;
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
}
.post-image {
    margin-left: 16px;
    margin: auto 0;
    margin-bottom: 15px;
    width: 100%;
    height: 340rpx;
}
.post-content {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-like {
    margin-left: 10px;
    font-size: 13px;
    line-height: 16rpx;
    flex-direction: row;
}

.post-like-image {
    margin-right: 8px;
    width: 16px;
    height: 16px;
    vertical-align: middle;
}

.post-like-font {
    margin-right: 20px;
    vertical-align: middle;
}